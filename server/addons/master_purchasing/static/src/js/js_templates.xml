<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="master_purchasing.jsTemplate">
    <div class="alert alert-primary">
      <h3>Rendered from public widget.</h3>
    </div>
  </t>

  <t t-name="master_purchasing.templateWithVariables">
    <div>
      <ul>
        <li>String: <span t-out="string"/></li>
        <t t-set="some_date" t-value="new Date()"/>

        <li>Javascript Object: <span t-out="some_date.toLocaleString()"/></li>
        
        <li>Array:
          <ul>
            <li t-foreach="array" t-as="el" t-key="el">
              <span t-out="el"/>
            </li>
          </ul>
        </li>

        <li>Models:
          <ul>
            <li t-foreach="model" t-as="el" t-key="el.id">
                <span t-esc="el.item"/>
            </li>
          </ul>
        </li>

        <li>Attributes:
          <a t-attf-href="mailto:{{ email }}"><span t-out="email"/></a>
        </li>
      </ul>
    </div>
  </t>

  <!-- template inheritance -->
  <t t-name="master_purchasing.mainTemplate">
    <div class="alert alert-primary">
      <h3>This is the main template.</h3>
    </div>
  </t>

  <t t-inherit="master_purchasing.mainTemplate" t-inherit-mode="extension">
    <xpath expr="div" postion="inside">
      <button class="btn btn-info">Submit</button>
    </xpath>
  </t>
  <t 
    t-name="master_purchasing.mainTemplatePrimary" 
    t-inherit="master_purchasing.mainTemplate" 
    t-inherit-mode="primary">
    <xpath expr="div" postion="inside">
      <button class="btn btn-info ms-2">Close</button>
    </xpath>
  </t>

</templates>