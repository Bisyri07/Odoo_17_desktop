<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- view tree & kanban -->
  <record id='purchase_order_action' model='ir.actions.act_window'>
    <field name='name'>Purchase Order</field>
    <field name='res_model'>purchase.order</field>
    <field name='view_mode'>tree,form,kanban</field>
  </record>

  <!-- Form -->
  <record id='purchase_order_form' model='ir.ui.view'>
    <field name='name'>Purchase Order Form</field>
    <field name='model'>purchase.order</field>
    <field name='arch' type='xml'>
      <form>
        <sheet>
          <group>

            <group>
              <field name="po_no" readonly='1' />
              <field name="currency"/>
              <field name="qty"/>
              <field name="supplier"/>
              <field name="confirm_by"/>
              <field name="term_of_payment"/>
            </group>
            <group>
              <field name="po_date"/>
              <field name="currency_rate"/>
              <field name="date_input"/>
              <field name="supplier_code"/>
              <field name="input_by"/>  
              <field name="status"/>
            </group>  

            <notebook>
              <page string='Detail'>
                <group>

                  <group>
                    <field name='item' string='Item' />
                    <field name='unit_price' string='Unit Price' />
                    <field name='uom' string='UoM' />
                    <field name='subtotal' string='Subtotal' />
                  </group>
                  
                  <group>
                    <field name='item_code' string='Item Code' />
                    <field name='ppn_pct' string='PPN Percentage %' />
                    <field name='unit_weight' string='Unit Weight' />
                    <field name='description' string='Description' />
                  </group>
                  
                </group>
              </page>
            </notebook>     

          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>