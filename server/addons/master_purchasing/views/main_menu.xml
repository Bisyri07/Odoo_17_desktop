<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Tampilan awal saat module Mster purchasing dibuka -->
  <record id='purchase_order_tree' model='ir.ui.view'>
    <field name='name'>Purchase Order Tree</field>
    <field name='model'>purchase.order</field>
    <field name='arch' type='xml'>
      <tree string = 'Purchase Order Tree'>
        <field name='po_no' />
        <field name='item' />
        <field name='po_date' />
        <field name='supplier' />
        <field name='total' />
        <field name='status' />
      </tree>
    </field>
  </record>

  <!-- Menu di navbar odoo -->
  <menuitem id='master_purchasing_root' name='Master Purchasing' sequence='0'>
    
    <menuitem id='master_purchasing_data_menu' name='Purchasing Menu'>
      <menuitem 
        id = 'purchase_order_menu_action'
        action = 'purchase_order_action'
      />
    </menuitem>

    <menuitem id='purchase_order_relationship' name='Additional Information'>
      <menuitem 
        id= 'uom_relationship_menu_action'
        action='uom_relationship_action'
      />
    </menuitem>

  </menuitem>

</odoo>