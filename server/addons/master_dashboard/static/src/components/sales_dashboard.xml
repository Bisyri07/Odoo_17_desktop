<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
  <t t-name="master_dashboard.OwlSalesDashboard">
    <div class="vh-100 overflow-auto bg-muted">
      <div class="row m-3">
        <div class="col-lg-7">
          <div class="row">
            <div class="col m-0 p-0">
              <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                  <h1 class="text-primary fw-bold">Custom Sales dashboard</h1>
                  <div>
                    <select class="form-select" t-model="state.period" t-on-change="onChangePeriod">
                      <option value='0'>Select Period</option>
                      <option value='7'>Last 7 Days</option>
                      <option value='30'>Last 30 Days</option>
                      <option value='90'>Last 90 Days</option>
                      <option value='365'>Last 365 Days</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <KpiCard onClick.bind="viewQuotations"
                     name="'Quotation'"
                     value="state.quotations.value"
                     percentage="state.quotations.percentage"/>
            <KpiCard onClick.bind="viewOrders"
                     name="'Orders'"
                     value="state.orders.value"
                     percentage="state.orders.percentage"/>
            <KpiCard onClick.bind="viewRevenues"
                     name="'Revenues'"
                     value="state.orders.revenue"
                     percentage="state.orders.revenue_percentage"/>
            <KpiCard onClick.bind="viewRevenues"
                     name="'Average Order'"
                     value="state.orders.average"
                     percentage="state.orders.average_percentage"/>
          </div>
          <div class="row">
            <div class="col-lg-6 m-0 p-0">
              <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                  <h3 class="text-primary fw-bold">Top Products</h3>
                  <div class="px-3 py-1 bg-primary cursor-pointer">
                    <span class="fa fa-arrow-right text-white"/>
                  </div>
                </div>
                <ChartRenderer type="'doughnut'" title="'Doughnut Chart'" config="state.topProducts"/>
              </div>
            </div>
            <div class="col-lg-6 m-0 p-0">
              <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                  <h3 class="text-primary fw-bold">Top Sales by SalesPerson</h3>
                  <div class="px-3 py-1 bg-primary cursor-pointer">
                    <span class="fa fa-arrow-right text-white"/>
                  </div>
                </div>
                <ChartRenderer type="'pie'" title="'Pie Chart'" config="state.topSalesPeople"/>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-5">
          <div class="row">
            <div class="col m-0 p-0">
              <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                  <h3 class="text-primary fw-bold">Monthly Sales</h3>
                  <div class="px-3 py-1 bg-primary cursor-pointer">
                    <span class="fa fa-arrow-right text-white"/>
                  </div>
                </div>
                <ChartRenderer type="'bar'" title="'Bar Chart'" config="state.monthlySales"/>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col m-0 p-0">
              <div class="shadow-sm border m-2 p-4 bg-white">
                <div class="d-flex align-items-center justify-content-between">
                  <h3 class="text-primary fw-bold">Partner Orders</h3>
                  <div class="px-3 py-1 bg-primary cursor-pointer">
                    <span class="fa fa-arrow-right text-white"/>
                  </div>
                </div>
                <ChartRenderer type="'bar'" title="'Bar &amp; Line Chart'" config="state.partnerOrders"/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </t>          
</template>