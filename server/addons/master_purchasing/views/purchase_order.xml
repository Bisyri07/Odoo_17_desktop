<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- view tree & kanban -->
  <record id='purchase_order_action' model='ir.actions.act_window'>
    <field name='name'>Purchase Order</field>
    <field name='res_model'>purchase.order</field>
    <field name='view_mode'>tree,form,kanban</field>
  </record>

  <!-- Form -->
  <record id='purchase_order_form' model='ir.ui.view'>
    <field name='name'>Purchase Order Form</field>
    <field name='model'>purchase.order</field>
    <field name='arch' type='xml'>
      <form>

        <header>
          <!-- button -->
          <button 
          name="action_confirmed"
          type="object"
          string="Confirm"
          invisible="state=='confirmed'"
          class="btn-primary"
          />

          <button 
          name="action_canceled"
          type="object"
          string="Cancel"
          invisible="state=='canceled'"
          class="btn-secondary"
          />

          <!-- send an email button -->
           <button 
           name="action_send_email"
           type="object"
           string="Send by Email"
           invisible="state=='canceled'"
           />

          <!-- status bar -->
          <field 
          name="state"
          widget="statusbar"
          statusbar_visible="input,confirmed"
          />

        </header>

        <sheet>
          <group>

            <group>
              <field name="po_no" readonly='1' />
              <field name="currency"/>
              <field name="qty"/>
              <field name="supplier"/>
              <field name="confirm_by"/>
              <field name="discount_pct"/>
              <field name="term_of_payment"/>
            </group>
            <group>
              <field name="po_date"/>
              <field name="currency_rate"/>
              <field name="date_input"/>
              <field name="supplier_code"/>
              <field name="input_by"/>  
              <field name="discount"/>
              <field name="email_po"/>
            </group>  

            <notebook>
              <page string='Detail'>
                <group>

                  <group>
                    <field name='item' string='Item' />
                    <field name='unit_price' string='Unit Price' />
                    <field name='ppn_pct' string='PPN Percentage %' />
                    <field name='subtotal' string='Subtotal' />
                    <field name='uom' string='UoM' />
                  </group>
                  
                  <group>
                    <field name='item_code' string='Item Code' />
                    <field name='unit_weight' string='Unit Weight' />
                    <field name='ppn' string='PPN' />
                    <field name='total' />
                    <field name='description' string='Description' />
                  </group>
                  
                </group>
              </page>

              <page string='Additional Information'>
                <group>
                  <group>
                    <field name='contact_person' />
                    <field name='date_posted' />
                  </group>
                  <group>
                    <field name='tag_ids' 
                           widget="many2many_tags" 
                           options="{'color_field': 'color'}"/>
                    <field name='expired_date' />
                  </group>
                </group>
              </page>
            </notebook>     

          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- costumize kanban view -->
  <record id='purchase_order_kanban_view' model='ir.ui.view'>
    <field name='name'>Kanban</field>
    <field name='model'>purchase.order</field>
    <field name='arch' type='xml'>
      <kanban class='o_kanban_small_column'>
        <field name='item' />
        <field name='po_no' />
        <field name='total' />
        <field name='state' />

        <templates>
          <!-- kanban card design -->
          <t t-name='kanban-box'>
            <div t-attf-class='oe_kanban_global_click'>
              <div class='oe_kanban_content'>

                <div class='o_kanban_record_top mb16'>
                  <div class='o_kanban_record_headings mt4'>
                    <strong class='o_kanban_record_title'>
                      <span>Item: <field name='item' /></span>
                    </strong>
                  </div>
                  <div>
                    <strong>
                      <span>Total: Rp.<field name="total"/></span>
                    </strong>
                  </div>
                </div>

                <div class='o_kanban_record_bottom'>
                  <div class='oe_kanban_bottom_left text-muted'>
                    <small>
                        <span>PO No: <field name="po_no"/></span>
                    </small>
                    <!-- <field name="activity_ids" widget="kanban_activity"/> -->
                  </div>
                  <div class='oe_kanban_bottom_right'>
                    <span>Status: <field name="state"/></span>
                  </div>
                </div>

              </div>  
            </div>
          </t>
        </templates>

      </kanban>
    </field>
  </record>

</odoo>