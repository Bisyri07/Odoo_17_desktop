<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Tampilan awal saat module Master Data dibuka -->
    <record id='master_item_tree' model='ir.ui.view'>
      <field name='name'>Master Item Tree</field>
      <field name='model'>master.item</field>
      <field name='arch' type='xml'>
        <tree string='Master Item Tree'>
          <field name='item' optional="show"/>
          <field name='item_code' optional="show"/>
          <field name='quantity' optional="show"/>
          <field name="currency_id" optional="hide"/>
          <field name='unit_price' optional="show"/>
          <field name='acq_date' optional="show"/>
          <field name='annual_dep' optional="show"/>
          <field name='annual_dep_pct' optional="hide"/>
        </tree>
      </field>
    </record>
  </data>
  <!-- Menu navbar -->
  <menuitem id='master_data_root' name='Master Data' sequence='0'>
    <menuitem id='master_data_menu' name='Master Data Menu'>
      <menuitem 
        id='master_item_menu_action'
        action='master_item_action'
      />
      <menuitem 
        id='master_item_type_menu_action'
        action='master_item_type_action'
      />
      <menuitem 
        id='master_company_menu_action'
        action='master_company_action'
      />
      <menuitem 
        id='master_customer_menu_action'
        action='master_customer_action'
      />
      <menuitem 
        id='master_supplier_menu_action'
        action='master_supplier_action'
      />
      <menuitem 
        id='master_location_menu_action'
        action='master_location_action'
      />
    </menuitem>

    <menuitem id='additional_data_menu' name='Additional Data'>
      <menuitem 
      id='city_relationship_menu_action'
      action='city_relationship_action'
      />
    </menuitem>
  </menuitem>

</odoo>