<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- view tree -->
    <record id='master_supplier_tree' model='ir.ui.view'>
      <field name='name'>Master Supplier</field>
      <field name='model'>master.supplier</field>
      <field name='arch' type='xml'>
        <tree>
          <field name='supplier_id' />
          <field name='supplier' />
          <field name='contact' />
          <field name='phone' />
          <field name='email' />
          <field name='activity' />
        </tree>
      </field>
    </record>

    <!-- action -->
    <record id='master_supplier_action' model='ir.actions.act_window'>
      <field name='name'>Master Supplier</field>
      <field name='res_model'>master.supplier</field>
      <field name='view_mode'>tree,form</field>
    </record>

    <!-- form -->
    <record id='master_supplier_form' model='ir.ui.view'>
      <field name='name'>Master Supplier</field>
      <field name='model'>master.supplier</field>
      <field name='arch' type='xml'>
        <form>
          <sheet>
            <group>
              <group>
                <field name='supplier' />
                <field name='contact' />
                <field name='email' />
              </group>
              <group>
                <field name='supplier_id' />
                <field name='phone' />
                <field name='activity' />
                <field name='address' />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>      
</odoo>